<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ondu.mvvm">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="cn.ondu.mvvm.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity android:name="cn.ondu.mvvm.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="cn.ondu.mvvm.ui.account.LoginActivity"/>
        <activity android:name="cn.ondu.mvvm.ui.account.RegisterActivity"/>


        <activity android:name="cn.ondu.mvvm.ui.details.ChatDetailsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="portrait"/>

        <!-- 这个Service要继承JCommonService -->
        <service android:name="cn.ondu.mvvm.jpush.JService"
            android:process=":pushcore">
            <intent-filter>
                <action android:name="cn.jiguang.user.service.action" />
            </intent-filter>
        </service>
    </application>

</manifest>